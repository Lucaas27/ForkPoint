{
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=ForkPoint;User Id=postgres;Password=postgres;Port=5432;"
  },
  "ClientURI": "http://localhost:3000",
  "Logging": {
    "SensitiveData": {
      "Keywords": [
        "password",
        "newPassword",
        "confirmPassword",
        "authorization",
        "token",
        "refreshToken",
        "accessToken",
        "key",
        "secret"
      ],
      "Mask": "******"
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp: dd-MM-yyyy HH:mm:ss} {Level:u3}] |{SourceContext}| {NewLine}{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/ForkPointAPI-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUris": [
        "https://localhost:7078/signin-google"
      ]
    }
  },
  "Jwt": {
    "Key": "your-secret-key-here-should-be-at-least-32-characters-long",
    "Issuer": "ForkPointAPI",
    "Audience": "ForkPointClient",
    "AccessTokenExpirationInMinutes": 15
  },
  "EmailConfig": {
    "From": "",
    "Server": "",
    "Ports": 587,
    "Username": "",
    "Password": ""
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7078",
      "http://localhost:5173",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "Apis": {
    "FourSquare": {
      "BaseUrl": "",
      "ApiKey": "",
      "ApiVersion": ""
    }
  }
}