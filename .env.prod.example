# Database Configuration
POSTGRES_DB=ForkPoint
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# JWT Configuration (generate a secure 256-bit key)
JWT_KEY=your_256_bit_jwt_secret_key_here_minimum_32_characters
JWT_ISSUER=https://your-coolify-domain.com
JWT_AUDIENCE=https://your-coolify-domain.com

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend base URL used in emails (verification/reset links)
# Example: https://app.yourdomain.com
CLIENT_URI=https://app.yourdomain.com

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

